@model Winnie_Learning_Programme.Models.CoursesViewModel
@{
    ViewBag.Title = "StudentList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="en">
<body>
    <div class="page-heading" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Student Recommendation</h2>
                        <span>Highly Recommend To Choose this learning platform.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="section" id="products">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <h2>Student Recommendation</h2>
                        <span>See our honest review.</span>
                    </div>
                </div>
            </div>
        </div>


        @if (Model.Students.Count > 0)
        {
          <div class="container">
              <div class="col-lg-12 row">
                 
                  <section class="" style="background-color: #f4f5f7;">
                      <div class="container py-5 h-100">
                           
                          <div class="row d-flex justify-content-center align-items-center h-100">
                              @foreach (var stu in Model.Students)
                              {
                                  <div class="col-lg-6">
                                      <div class="card mb-3" style="border-radius: .5rem;">
                                          <div class="row g-0">
                                              <div class="col-md-4 gradient-custom text-center text-white"
                                                   style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                                  <img src="@stu.ImgUrl"
                                                       alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                                                  <h5>@stu.StudentName</h5>
                                                  <i class="far fa-edit mb-5"></i>
                                              </div>
                                              <div class="col-md-8">
                                                  <div class="card-body p-4">
                                                      <h6>@stu.StudentName</h6>
                                                      <hr class="mt-0 mb-4">
                                                      <div class="row pt-1">
                                                          <div class="col-6 mb-3">
                                                              <h6>Email</h6>
                                                              <p class="text-muted">@stu.StudentName@@gmail.com</p>
                                                          </div>
                                                          <div class="col-6 mb-3">
                                                              <h6>Phone</h6>
                                                              <p class="text-muted">@stu.Phone</p>
                                                          </div>
                                                      </div>
                                                      <div class="row pt-1">
                                                          <div class="col-6 mb-3">
                                                              <h6>Major</h6>
                                                              <p class="text-muted">@stu.Major</p>
                                                          </div>
                                                          <div class="col-6 mb-3">
                                                              <h6>Age</h6>
                                                              <p class="text-muted">@stu.Age</p>
                                                          </div>
                                                      </div>
                                                      <div class="row pt-1">
                                                          <div class="col-6 mb-3">
                                                              <h6>Address</h6>
                                                              <p class="text-muted">@stu.Address</p>
                                                          </div>
                                                          <div class="col-6 mb-3">
                                                              <h6>Taken Courses</h6>
                                                              @if (stu.Course != null)
                                                              {
                                                                  <p class="text-muted">@stu.Course.Name</p>
                                                              }
                                                              else
                                                              {
                                                                  <p>There has no course for selected student.</p>
                                                              }

                                                          </div>
                                                      </div>
                                                      <div class="d-flex justify-content-start">
                                                          @foreach (var link in stu.SocialLink)
                                                          {
                                                              <a href="@link.Url"><i class="fa fa-@link.Name-f fa-lg me-3"></i></a>
                                                          }

                                                      </div>
                                                  </div>
                                              </div>
                                          </div>
                                      </div>
                                  </div>
                              }
                              </div>

                      </div>
                  </section>

              </div>
                </div>


        }

    </section>
   
</body>

</html>





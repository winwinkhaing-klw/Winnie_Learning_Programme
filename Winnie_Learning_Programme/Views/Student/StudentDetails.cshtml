@model Winnie_Learning_Programme.Models.CoursesViewModel
@{
    ViewBag.Title = "StudentDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="vh-100" style="background-color: #f4f5f7;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <img src="@Model.Student.User.ImgUrl"
                                 alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                            <h5>@Model.Student.User.Name</h5>
                            <p></p>
                            <i class="far fa-edit mb-5"></i>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6>About Me</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Email</h6>
                                        <p class="text-muted">@Model.Student.User.Email</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Phone</h6>
                                        <p class="text-muted">@Model.Student.User.PhoneNo</p>
                                    </div>
                                </div>
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Major</h6>
                                        <p class="text-muted">@Model.Student.Major</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Age</h6>
                                        <p class="text-muted">@Model.Student.User.Birthdate</p>
                                    </div>
                                </div>
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Address</h6>
                                        <p class="text-muted">@Model.Student.User.Address</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Taken Courses</h6>
                                        @if (Model.Course != null)
                                        {
                                            <p class="text-muted">@Model.Course.CourseName</p>
                                        }
                                        else
                                        {
                                            <p>There has no course for selected student.</p>
                                        }

                                    </div>
                                </div>
                                <div class="d-flex justify-content-start">
                                    <a href="@Model.Student.SocialName."><i class="fa fa-@Model.Student.SocialLink-f fa-lg me-3"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
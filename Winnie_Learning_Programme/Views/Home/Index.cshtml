@model Winnie_Learning_Programme.Models.CoursesViewModel
@using Winnie_Learning_Programme.Models
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="en">
<head>
    <title>Learning Program</title>
</head>

<body>
    <div class="main-banner" id="top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div class="left-content">
                        <div class="thumb">
                            <div class="inner-content">
                                <h4>We Are Learning programs</h4>
                                <span>You can find all courses as you want.</span>
                                <div class="main-border-button">
                                    <a href="@Url.Action("Courses","Courses")">Enroll Now!</a>
                                </div>
                            </div>
                            <img src="~/Content/assets/images/course4.png" alt="">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="right-content">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="right-first-image">
                                    <div class="thumb">
                                        <div class="inner-content">
                                            <h4>All Courses</h4>
                                            <span>The best courses for you.</span>
                                        </div>
                                        <div class="hover-content">
                                            <div class="inner">
                                                <h4>Beginner to Professional</h4>
                                                <p>Step by step to reach professional level.</p>
                                                <div class="main-border-button">
                                                    <a href="@Url.Action("Courses","Courses")">View More</a>
                                                </div>
                                            </div>
                                        </div>
                                        <img src="~/Content/assets/images/course7.png">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="right-first-image">
                                    <div class="thumb">
                                        <div class="inner-content">
                                            <h4>Your Courses</h4>
                                            <span>There have yours.</span>
                                        </div>
                                        <div class="hover-content">
                                            <div class="inner">
                                                <h4>Your courses</h4>
                                                <p>Continue your learning journey.</p>
                                                <div class="main-border-button">
                                                    <a href="@Url.Action("YourCourse","Courses")">Proceed Your Learning</a>
                                                </div>
                                            </div>
                                        </div>
                                        <img src="~/Content/assets/images/course1.jpg">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="right-first-image">
                                    <div class="thumb">
                                        <div class="inner-content">
                                            <h4>Popular Courses</h4>
                                            <span>Popular Courses this week</span>
                                        </div>
                                        <div class="hover-content">
                                            <div class="inner">
                                                <h4>Popular courses</h4>
                                                <p>There have the most popular courses for you.</p>
                                                <div class="main-border-button">
                                                    <a href="@Url.Action("PopularCourse","Courses")">Let's Enroll!</a>
                                                </div>
                                            </div>
                                        </div>
                                        <img src="~/Content/assets/images/course10.jpg">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="right-first-image">
                                    <div class="thumb">
                                        <div class="inner-content">
                                            <h4>Student's Recommendation</h4>
                                            <span>Honest Review</span>
                                        </div>
                                        <div class="hover-content">
                                            <div class="inner">
                                                <h4>Recommendation</h4>
                                                <p>Here to see honest review and recommendation from our students.</p>
                                                <div class="main-border-button">
                                                    <a href="#">Review</a>
                                                </div>
                                            </div>
                                        </div>
                                        <img src="~/Content/assets/images/course9.jpg">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="section" id="men">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="section-heading">
                        <h2>All Courses</h2>
                        <span>Our team provide mutiple services with better way as much as we can.</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="men-item-carousel">
                        <div class="owl-men-item owl-carousel">
                            @if (Model.Courses.Count > 0)
                            {
                                foreach (var course in Model.Courses)
                                {
                                    <div class="item">
                                        <div class="thumb">
                                            <div class="hover-content">
                                                <ul>
                                                    <li><a href="single-product.html"><i class="fa fa-eye"></i></a></li>
                                                    <li><a href="single-product.html"><i class="fa fa-star"></i></a></li>
                                                    <li><a href="single-product.html"><i class="fa fa-shopping-cart"></i></a></li>
                                                </ul>
                                            </div>
                                            <img src="@course.Url" alt="" height="300">
                                        </div>
                                        <div class="down-content">
                                            <h4>@course.Name</h4>
                                            <span>$@course.Price.00</span>
                                            <ul class="stars">
                                                @for (int i = 0; i < 4; i++)
                                                {
                                                    <li><i class="fa fa-star"></i></li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                }

                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section" id="women">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="section-heading">
                        <h2>Popular Courses</h2>
                        <span>Here to check popular courses.</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="men-item-carousel">
                        <div class="owl-men-item owl-carousel">
                            @if (Model.Courses.Any(x => x.Category == Constant.Category.Pop))
                            {
                                List<Courses> popCourses = Model.Courses.Where(x => x.Category == Constant.Category.Pop).ToList();
                                if (popCourses.Count > 0)
                                {
                                    foreach (var popCourse in popCourses)
                                    {
                                        <div class="item">
                                            <div class="thumb">
                                                <div class="hover-content">
                                                    <ul>
                                                        <li><a href="single-product.html"><i class="fa fa-eye"></i></a></li>
                                                        <li><a href="single-product.html"><i class="fa fa-star"></i></a></li>
                                                        <li><a href="single-product.html"><i class="fa fa-shopping-cart"></i></a></li>
                                                    </ul>
                                                </div>
                                                <img src="@popCourse.Url" alt="">
                                            </div>
                                            <div class="down-content">
                                                <h4>@popCourse.Name</h4>
                                                <span>$@popCourse.Price.00</span>
                                                <ul class="stars">
                                                    @for (int i = 0; i < 5; i++)
                                                    {
                                                        <li><i class="fa fa-star"></i></li>
                                                    }

                                                </ul>
                                            </div>
                                        </div>
                                    }
                                }

                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <section class="section" id="kids">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="section-heading">
                        <h2>Your Course</h2>
                        <span>Our team provide mutiple services with better way as much as we can.</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="kid-item-carousel">
                        <div class="owl-kid-item owl-carousel">
                            @if (Model.Courses.Any(x => x.Category == Constant.Category.Mine))
                            {
                                List<Courses> selectedCourses = Model.Courses.Where(x => x.Category == Constant.Category.Mine).ToList();
                                if (selectedCourses.Count > 0)
                                {
                                    foreach (var selectedCourse in selectedCourses)
                                    {
                                        <div class="item">
                                            <div class="thumb">
                                                <div class="hover-content">
                                                    <ul>
                                                        <li><a href="single-product.html"><i class="fa fa-eye"></i></a></li>
                                                        <li><a href="single-product.html"><i class="fa fa-star"></i></a></li>
                                                        <li><a href="single-product.html"><i class="fa fa-shopping-cart"></i></a></li>
                                                    </ul>
                                                </div>
                                                <img src="@selectedCourse.Url" alt="" width="400">
                                            </div>
                                            <div class="down-content">
                                                <h4>@selectedCourse.Name</h4>
                                                <span>$@selectedCourse.Price.00</span>
                                                <ul class="stars">
                                                    @for (int i = 0; i < 5; i++)
                                                    {
                                                        <li><i class="fa fa-star"></i></li>
                                                    }

                                                </ul>
                                            </div>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ***** Explore Area Starts ***** -->
    <section class="section" id="explore">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="left-content">
                        <h2>Explore Our Products</h2>
                        <span>You are allowed to learn any course as you wish.</span>
                        <div class="quote">
                            <i class="fa fa-quote-left"></i><p>We deserve better services as much as we can.</p>
                        </div>
                        <div class="main-border-button">
                            <a href="@Url.Action("Courses","Courses")">Discover More</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="right-content">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="leather">
                                    <h4>Best Seller</h4>
                                    <span>Latest Technology</span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="first-image">
                                    <img src="~/Content/assets/images/latest.jpg" alt="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="second-image">
                                    <img src="~/Content/assets/images/latest1.jpg" alt="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="types">
                                    <h4>New Course</h4>
                                    <span>Take Latest Course</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ***** Explore Area Ends ***** -->
   
    <section class="section" id="social">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <h2>Student Recommendation</h2>
                        <span>Our team provide mutiple services with better way as much as we can.</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
           
            <div class="row images">
                @foreach (var stu in Model.Students)
                {
                    <div class="col-2">
                        <div class="thumb">
                            <div class="icon">
                                <a href="#">
                                    <h6>@stu.StudentName</h6>
                                    <i class="fa fa-user"></i>
                                </a>
                            </div>
                            <img src="@stu.ImgUrl" alt="">
                        </div>
                    </div>
                }
                </div>
        </div>
    </section>
</body>
</html>